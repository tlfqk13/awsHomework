{{>layout/header}}
<h1>article register</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">title</label>
                <input type="text" class="form-control" id="title" placeholder="insert title" >
            </div>

            <div class="form-group">
                <label for="author">author</label>
                <input type="text" class="form-control" id="author" placeholder="insert author" >
            </div>

            <div class="form-group">
                <label for="content">content</label>
                <input type="text" class="form-control" id="content" placeholder="insert content" >
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">cancel</a>
        <button type="button" class="btn btn-primary" id="btn-save">register</button>
    </div>
</div>
{{>layout/footer}}